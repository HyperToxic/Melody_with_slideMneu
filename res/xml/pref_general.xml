<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="personize"
        android:title="个性化" >
    </PreferenceCategory>

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="MELODY"
        android:inputType="textCapWords"
        android:key="flash_text_perf"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:summary="更改欢迎屏幕显示的内容"
        android:title="欢迎屏幕文字" />

    <PreferenceCategory
        android:key="effect"
        android:title="视觉" >
    </PreferenceCategory>

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="full_screen_perf"
        android:summary="隐藏系统状态栏，将得到更好的视觉效果"
        android:title="隐藏状态栏" />
   
    <PreferenceCategory
        android:key="more"
        android:title="更多" >
    </PreferenceCategory>

    <Preference
        android:key="about_perf"
        android:title="关于" >
        <intent
            android:action="android.intent.action.MAIN"
            android:targetClass="com.guohow.melody_sildemenu.About"
            android:targetPackage="com.guohow.melody_sildemenu" >
        </intent>
    </Preference>
    
    <Preference
        android:key="code_perf"
        android:title="源代码" >
        <intent
            android:action="android.intent.action.MAIN"
            android:targetClass="com.guohow.melody_sildemenu.OpenSource"
            android:targetPackage="com.guohow.melody_sildemenu" >
        </intent>
    </Preference>

</PreferenceScreen>